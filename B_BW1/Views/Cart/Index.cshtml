@model List<B_BW1.Models.CartItem>

<h2>Carrello</h2>

<table class="table">
    <thead>
        <tr>
            <th>Prodotto</th>
            <th>Prezzo</th>
            <th>Quantità</th>
            <th>Totale</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageURL" style="height:80px;" />
                    <br />
                    @item.DisplayName
                </td>
                <td>@item.Price €</td>
                <td>@item.Quantity</td>
                <td>@(item.Price* item.Quantity) €</td>
                <td>
                    <form method="post" action="/Cart/Remove">
                        <input type="hidden" name="id" value="@item.ProductId" />
                        <button class="btn btn-sm btn-danger">X</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<h4>
    Totale:
    <strong>
        @Model.Sum(x => x.Price * x.Quantity) €
    </strong>
</h4>